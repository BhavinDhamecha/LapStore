.payment_view
  .container
    %h1 Payments
    = form_tag(payments_path, method: :get, class: "form-inline") do
      / = text_field_tag :search_payment_mode, params[:search_payment_mode], placeholder: "Mode", class: "form-control"
      = select_tag "order_id", options_from_collection_for_select(@orders, "id", "date", @order_date), {include_blank: true , class: "form-control" }
      = submit_tag 'Search', class: "btn btn-primary"
    %table.table.table-hover.table-responsive
      %thead
        %tr
          %th Order
          %th Mode
          %th Status
          %th Amount
          %th{:colspan => "3"} Action
      %tbody
        - @payments.each do |payment|
          %tr
            %td
              = payment.order.date
            %td
              = payment.mode
            %td
              = payment.status
            %td
              = payment.amount
            %td
              = link_to 'Show', payment
            %td
              = link_to 'Edit', edit_payment_path(payment)
            %td
              = link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' }
    
    %hr
    %div.d-flex.justify-content-center
      = paginate @payments

    %hr
    %div{:align => "center"}
      = link_to 'New Payment', new_payment_path, class: "btn btn-primary text-uppercase"
