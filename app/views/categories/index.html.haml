.category_view
  .container
    %h1 Categories
    %div{align: "right"}
      = link_to 'Add Category', new_category_path, class: "btn btn-primary text-uppercase"
    = form_tag(categories_path, method: :get, class: "form-inline") do
      = text_field_tag :search_category_name, params[:search_category_name], placeholder: "Name", class: "form-control"
      = submit_tag 'Search', class: "btn btn-primary"
    %table.table.table-hover.table-responsive
      %thead
        %tr
          %th Name
          %th{:colspan => "3"} Action
      %tbody
        - @categories.each do |category|
          %tr
            %td
              = category.name
            %td
              = link_to 'Show', category
            %td
              = link_to 'Edit', edit_category_path(category)
            %td
              = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
    
    %hr
    %div.d-flex.justify-content-center
      = paginate @categories
    
