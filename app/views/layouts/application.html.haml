!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title LapStore
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        %a.navbar-brand{:href => "#"} LapStore
        %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarResponsive", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          %ul.navbar-nav.ml-auto
            - if user_signed_in?
              %li
                = link_to 'Laptop',   laptops_path,    class: "nav-link"
              %li
                = link_to 'Customer', customers_path,  class: "nav-link"
              %li
                = link_to 'Order',    orders_path,     class: "nav-link"
              %li
                = link_to 'Brand',    brands_path,     class: "nav-link"
              %li
                = link_to 'Payment',  payments_path,   class: "nav-link"
              %li
                = link_to 'Category', categories_path, class: "nav-link"
              %li
                = link_to 'Shop',     shops_path,      class: "nav-link"
              %li
                = link_to current_user.email, edit_user_registration_path,    class: "nav-link"
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete,class: "nav-link"
            - else
              %li
                = link_to 'Sign Up', new_user_registration_path, class: "nav-link js-scroll-trigger"
              %li
                = link_to 'Login', new_user_session_path,        class: "nav-link js-scroll-trigger"
  
  - if notice
    %p.alert.alert-success= notice
  - if alert
    %p.alert.alert-danger= alert

  = yield

  %footer.py-2.bg-dark
    .container
      %p.text-center.text-white Copyright Â© LapStore
