.order_view
  .container
    %h1 Orders
    = form_tag(orders_path, method: :get, class: "form-inline") do
      = date_select :search_order_date, params[:search_order_date], placeholder: "Date", class: "form-control"
      = submit_tag 'Search', class: "btn btn-primary"
    %table.table.table-hover.table-responsive
      %thead
        %tr
          %th Date
          %th Laptop
          %th Customer
          %th Shipping address
          %th Billing address
          %th Amount
          %th Status
          %th{:colspan => "3"} Action
      %tbody
        - @orders.each do |order|
          %tr
            %td
              = order.date
            %td
              = order.laptop.name
            %td
              = order.customer.name
            %td
              = order.shipping_address
            %td
              = order.billing_address
            %td
              = order.amount
            %td
              = order.status
            %td
              = link_to 'Show', order
            %td
              = link_to 'Edit', edit_order_path(order)
            %td
              = link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }
    
    %hr
    %div.d-flex.justify-content-center
      = paginate @orders
    
    %hr
    %div{:align => "center"}
      = link_to 'Add Order', new_order_path, class: "btn btn-primary"
