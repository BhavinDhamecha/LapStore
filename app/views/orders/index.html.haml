.order_view
  .container
    %h1 Orders
    %table.table.table-hover.table-responsive
      %thead
        %tr
          %th Date
          %th Laptop
          %th Customer
          %th Shipping address
          %th Billing address
          %th Amount
          %th Status
          %th{:colspan => "3"} Action
      %tbody
        - @orders.each do |order|
          %tr
            %td
              = order.date
            %td
              = order.laptop.name
            %td
              = order.customer.name
            %td
              = order.shipping_address
            %td
              = order.billing_address
            %td
              = order.amount
            %td
              = order.status
            %td
              = link_to 'Show', order
            %td
              = link_to 'Edit', edit_order_path(order)
            %td
              = link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }
    %hr.my-4
    = paginate @orders
    %hr.my-4
    %div{:align => "center"}
      = link_to 'Add Order', new_order_path, class: "btn btn-primary"
