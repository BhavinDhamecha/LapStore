.brand_view
  .container
    %h1 Brands
    = form_tag(brands_path, method: :get, class: "form-inline") do
      = text_field_tag :search_brand_name, params[:search_brand_name], placeholder: "Name", class: "form-control"
      = submit_tag 'Search', class: "btn btn-primary"
    %table.table.table-hover.table-responsive
      %thead
        %tr
          %th Name
          %th Website
          %th{:colspan => "3"} Action
      %tbody
        - @brands.each do |brand|
          %tr
            %td
              = brand.name
            %td
              = brand.website
            %td
              = link_to 'Show', brand
            %td
              = link_to 'Edit', edit_brand_path(brand)
            %td
              = link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }
    
    %hr
    %div.d-flex.justify-content-center
      = paginate @brands

    %hr
    %div{:align => "center"}
      = link_to 'Add Brand', new_brand_path, class: "btn btn-primary"
