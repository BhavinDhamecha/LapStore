.brand_view
  .container
    %h1 Brands
    %table.table.table-hover.table-responsive
      %thead
        %tr
          %th Name
          %th Website
          %th{:colspan => "3"} Action
      %tbody
        - @brands.each do |brand|
          %tr
            %td
              = brand.name
            %td
              = brand.website
            %td
              = link_to 'Show', brand
            %td
              = link_to 'Edit', edit_brand_path(brand)
            %td
              = link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }
    
    %hr.my-4
    = paginate @brands

    %hr.my-4
    %div{:align => "center"}
      = link_to 'Add Brand', new_brand_path, class: "btn btn-primary"
