.container
  .row
    .col-sm-9.col-md-7.col-lg-5.mx-auto
      .card.card-signin.my-5
        .card-body
          = form_with(model: customer, local: true) do |form|
            - if customer.errors.any?
              #error_explanation
                %h2
                  = pluralize(customer.errors.count, "error")
                  prohibited this customer from being saved:
                %ul
                  - customer.errors.full_messages.each do |message|
                    %li= message
            = form.label :name
            = form.text_field :name, autofocus: true,       class: "form-control"
            = form.label :address
            = form.text_field :address, autofocus: true,    class: "form-control"
            = form.label :number
            = form.text_field :number, autofocus: true,     class: "form-control"
            = form.label :username
            = form.text_field :username, autofocus: true,   class: "form-control"
            = form.label :email
            = form.text_field :email, autofocus: true,      class: "form-control"
            %hr.my-4/
            = form.submit "Submit", class: "btn btn-primary btn-block text-uppercase"
