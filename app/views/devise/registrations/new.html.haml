.devise
  .container
    .row
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        .card.card-signin.my-5
          .card-body
            %h5.card-title.text-center Sign Up
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!

              = f.label :email
              %br
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"

              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br
              = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control"
              
              = f.label :password_confirmation
              %br
              = f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control"
              %br
              
              = f.submit "Sign Up", class: "btn btn-lg btn-primary btn-block text-uppercase"
              
              %hr.my-4
              = render "devise/shared/links"
